<Page x:Class="MainProgram2.PageBegin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainProgram2"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
	  xmlns:k2="clr-namespace:Microsoft.Kinect.Toolkit.Controls;assembly=Microsoft.Kinect.Toolkit.Controls"
	  Loaded="Page_Loaded" Title="PageBegin">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="7*"/>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<Image Name="m_imgBackground" Grid.RowSpan="3" Grid.ColumnSpan="3" Stretch="Fill" Visibility="Visible"/>
		<Image Name="m_imgUser" Grid.RowSpan="3" Grid.ColumnSpan="3" Stretch="Fill"/>
		<Grid Grid.Row="1" Grid.Column="1">
			<k2:KinectTileButton Name="m_btnGameStart" Height="Auto" Width="Auto" Margin="0,0,0,0" Click="m_btnGameStart_Click" BorderThickness="0" Visibility="Hidden">
				<k2:KinectTileButton.Background>
					<ImageBrush ImageSource="Images/PageBegin_시작버튼.png" Stretch="Fill"/>
				</k2:KinectTileButton.Background>
			</k2:KinectTileButton>
		</Grid>
	</Grid>
</Page>
